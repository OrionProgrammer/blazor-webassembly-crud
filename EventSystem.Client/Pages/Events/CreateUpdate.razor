@page "/event/create"
@page "/event/update/{eventId:int}"
@attribute [Authorize(Roles = "Admin")]

<div class="mb-2 border-solid border-grey-light rounded border shadow-sm w-full md:w-1/2 lg:w-1/2">
    <div class="bg-gray-600 text-black px-2 py-3 border-solid border-gray-400 border-b">
        <h1>@(isUpdateMode ? "Update Event" : "Create Event")</h1>
    </div>
    <div class="py-4 px-4">
        <EditForm Model="@eventModel" OnValidSubmit="HandleValidSubmit" class="w-half">
            <DataAnnotationsValidator />

            <InputNumber hidden @bind-Value="eventModel.Id"></InputNumber>
            <div class="md:flex md:items-left mb-4">
                <div class="md:w-1/4">
                    <label class="block text-gray-500 font-regular md:text-right mb-1 md:mb-0 pr-4"
                           for="name">
                        Name
                    </label>
                </div>
                <div class="md:w-3/4">
                    <InputText class="bg-grey-200 appearance-none border-1 border-grey-200 rounded w-full py-2 px-4 text-grey-darker leading-tight focus:outline-none focus:bg-white focus:border-purple-light"
                               id="name"
                               aria-label="Name"
                               @bind-Value="eventModel.Name" />
                    <ValidationMessage For="@(() => eventModel.Name)" />
                </div>
            </div>
            <div class="md:flex md:items-center mb-4">
                <div class="md:w-1/4">
                    <label class="block text-gray-500 font-regular md:text-right mb-1 md:mb-0 pr-4"
                           for="description">
                        Description
                    </label>
                </div>
                <div class="md:w-3/4">
                    <InputText class="bg-grey-200 appearance-none border-1 border-grey-200 rounded w-full py-2 px-4 text-grey-darker leading-tight focus:outline-none focus:bg-white focus:border-purple-light"
                               id="description"
                               aria-label="Description"
                               @bind-Value="eventModel.Description" />
                    <ValidationMessage For="@(() => eventModel.Description)" />
                </div>
            </div>
            <div class="md:flex md:items-left mb-4">
                <div class="md:w-1/4">
                    <label class="block text-gray-500 font-regular md:text-right mb-1 md:mb-0 pr-4"
                           for="location">
                        Location
                    </label>
                </div>
                <div class="md:w-3/4">
                    <InputText class="bg-grey-200 appearance-none border-1 border-grey-200 rounded w-full py-2 px-4 text-grey-darker leading-tight focus:outline-none focus:bg-white focus:border-purple-light"
                               id="location"
                               aria-label="Location"
                               @bind-Value="eventModel.Location" />
                    <ValidationMessage For="@(() => eventModel.Location)" />
                </div>
            </div>
            <div class="md:flex md:items-left mb-4">
                <div class="md:w-1/4">
                    <label class="block text-gray-500 font-regular md:text-right mb-1 md:mb-0 pr-4"
                           for="seatCount">
                        No. of Seats
                    </label>
                </div>
                <div class="md:w-3/4">
                    <InputNumber class="bg-grey-200 appearance-none border-1 border-grey-200 rounded w-half py-2 px-4 text-grey-darker leading-tight focus:outline-none focus:bg-white focus:border-purple-light"
                                 id="seatCount"
                                 aria-label="SeatCount"
                                 @bind-Value="eventModel.SeatCount" />
                    <ValidationMessage For="@(() => eventModel.SeatCount)" />
                </div>
            </div>
            <div class="md:flex md:items-left mb-4">
                <div class="md:w-1/4">
                    <label class="block text-gray-500 font-regular md:text-right mb-1 md:mb-0 pr-4"
                           for="attendanceCount">
                        No. Attending
                    </label>
                </div>
                <div class="md:w-3/4">
                    <InputNumber disabled class="bg-grey-200 appearance-none border-1 border-grey-200 rounded w-half py-2 px-4 text-grey-darker leading-tight focus:outline-none focus:bg-white focus:border-purple-light"
                                 id="attendanceCount"
                                 aria-label="AttendanceCount"
                                 @bind-Value="eventModel.AttendanceCount" />
                    <ValidationMessage For="@(() => eventModel.AttendanceCount)" />
                </div>
            </div>
            <div class="md:flex md:items-center">
                <div class="md:w-1/3"></div>
                <div class="md:w-2/3">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                            type="submit">
                        Save
                    </button>
                </div>
            </div>

        </EditForm>
    </div>
</div>

@if (!string.IsNullOrEmpty(submitMessage))
{
    <div class="alert alert-success mt-3">@submitMessage</div>
}
